<h1>Edit Your Recipe</h1>

<form action="/recipes/<%= recipe.id %>" class="edit-form" role="form">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" placeholder="Name of Recipe" name="name" value="<%= recipe.name %>">
  </div>
  <div class="form-group">
    <label for="amount">Amount of Calories</label>
    <input type="number" class="form-control" id="amount" placeholder="Number of Calories" name="amount" value="<%= recipe.amount %>">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<a href="/recipes">&larr; Back</a>